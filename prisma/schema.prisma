generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- MODELI (TABELE) ---

model User {
  id        String    @id @default(cuid())
  username  String    @unique // Pi Network username
  role      String    @default("user") // "user" ili "admin"
  isBanned  Boolean   @default(false)
  createdAt DateTime  @default(now())
  
  piWallet  String?   // Adresa novƒçanika za isplatu

  services  Service[] 
  orders    Order[]   @relation("BuyerOrders") 
  sales     Order[]   @relation("SellerOrders") 
  reviews   Review[]  // Recenzije koje je korisnik napisao

  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  category    String
  images      String[] 
  createdAt   DateTime @default(now())
  
  userId      String
  seller      User     @relation(fields: [userId], references: [id])
  
  orders      Order[]
  reviews     Review[] // Recenzije vezane za ovu uslugu
}

model Order {
  id        String   @id @default(cuid())
  status    String   @default("pending")
  amount    Float
  createdAt DateTime @default(now())

  paymentId String?  @unique
  txid      String?  // Hash transakcije (za isplatu)

  buyerId   String
  buyer     User     @relation("BuyerOrders", fields: [buyerId], references: [id])
  
  sellerId  String
  seller    User     @relation("SellerOrders", fields: [sellerId], references: [id])

  serviceId String
  service   Service  @relation(fields: [serviceId], references: [id])

  reviews   Review[] // Recenzije vezane za ovu porud≈æbinu
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String
  
  // üëá NOVO POLJE: Jezik na kom je napisana recenzija (default: engleski)
  language  String   @default("en")

  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id]) // Ko je ostavio recenziju

  serviceId String
  service   Service  @relation(fields: [serviceId], references: [id]) // Za koju uslugu

  orderId   String   
  order     Order    @relation(fields: [orderId], references: [id]) // Za koju porud≈æbinu
}

model Message {
  id        String   @id @default(cuid())
  content   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  senderId   String
  sender     User     @relation("SentMessages", fields: [senderId], references: [id])
  
  receiverId String
  receiver   User     @relation("ReceivedMessages", fields: [receiverId], references: [id])
}