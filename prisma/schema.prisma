//
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // ðŸ‘‡ Vercel promenljive koje popravljaju greÅ¡ku sa linkom
  url       = env("POSTGRES_PRISMA_URL") 
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// --- MODELI (TABELE) ---

model User {
  id        String    @id @default(cuid())
  username  String    @unique // Pi Network username
  role      String    @default("user") // "user" ili "admin"
  createdAt DateTime  @default(now())
  
  services  Service[] // Usluge koje prodaje
  orders    Order[]   @relation("BuyerOrders") // PorudÅ¾bine koje je kupio
  sales     Order[]   @relation("SellerOrders") // PorudÅ¾bine koje je prodao
  reviews   Review[]
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  category    String
  images      String[] // Niz linkova ka slikama
  createdAt   DateTime @default(now())
  
  userId      String
  seller      User     @relation(fields: [userId], references: [id])
  
  orders      Order[]
  reviews     Review[]
}

model Order {
  id        String   @id @default(cuid())
  status    String   @default("pending") // pending, active, completed, cancelled
  amount    Float
  createdAt DateTime @default(now())

  // --- POLJA ZA PI NETWORK ---
  paymentId String?   @unique
  txid      String?
  // ---------------------------

  buyerId   String
  buyer     User     @relation("BuyerOrders", fields: [buyerId], references: [id])
  
  sellerId  String
  seller    User     @relation("SellerOrders", fields: [sellerId], references: [id])

  serviceId String
  service   Service  @relation(fields: [serviceId], references: [id])
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  serviceId String
  service   Service  @relation(fields: [serviceId], references: [id])
}
